<h1>Listing Pins</h1>

<div class="container">""
 <div class="grid" data-masonry='{itemSelector": .grid-item", "columnWidth":190}'>

  <% @pins.each do |pin| %>
    <div class="grid-item" style="width:25%">
      <div class="thumbnail">
        <%= pin.name %>
        <%= image_tag(pin.photo, :style => 'width:300px') %>
        <%= pin.description %>
        <div class="buttons" style="margin-top: 10px; margin-bottom:10px ">
        <%= link_to 'Show', pin,:class => 'btn' %>
        <%= link_to 'Edit', edit_pin_path(pin),:class => 'btn' %>
          <% if user_signed_in? %>
            <%= link_to 'Destroy', pin, method: :delete, data: {confirm: 'Are you sure?'},
                        :class => "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>

  <% end %>


  <br>
  <% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path %>
  <% end %>
</div>
</div>
<script type="text/javascript" charset="utf-8">
    var $container = $('#container');
    $container.masonry({
        // options
        itemSelector: '.item',
        columnWidth: 200
    });
  $(window).load(function () {
      var $container=$('#container');
      $container.masonry({
          // options
          itemSelector: '.item',
          columnWidth: 200
      });
  })

</script>